<section class="our-work-content">
  <div class="container">
    <div class="row">
    <h1 class="text-center">Contact Us</h1>
      <div class="col-md-6 col-sm-12">
        <div class="contact-form">
          
          <%= form_for(:contact, url: contact_path) do |f| %>
            <div class="row">
              <div class="comment-box"></div>
              <div class="col-md-6 form-group">
               <%= f.text_field :name, class: "form-control", placeholder: "Name", type:"text"%>
              </div> 
              <div class="col-md-6 form-group">
                <%= f.text_field :email, class: "form-control", placeholder: "Email", type:"text"%>
              </div>
              <label class="col-md-12 control-label" for="textarea"></label>

              <div class="col-md-12">
                <%= f.text_area :message, class: "form-control", id: "textarea"%>
              </div>
              <div class="col-md-8 text-left">
               <%= f.submit "send message", class: "btn btn btn-warning"%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="contact-add-box">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3681.14321428899!2d75.85751045017264!3d22.6857119850516!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3962fcf129c55555%3A0x1d900acb06ce2221!2sHeyDay+technologies!5e0!3m2!1sen!2sin!4v1513262323169" width="500" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>

          <ul class="address-details">
            <h3>Our office address</h3>
            <li><i class="glyphicon glyphicon-map-marker"></i> M14, HeyDay Technologies</li>
            <li><i class="glyphicon glyphicon-map-marker"></i>Mangal Nagar Road</li>
            <li><i class="glyphicon glyphicon-map-marker"></i>Indore, Madhya Pradesh 452014</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
