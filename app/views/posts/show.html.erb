<div class="container">
  <div class="row">
    
    <!-- Post Content Column -->
    <div class="col-lg-8">
    
      <!-- Title -->
      <h1 class="mt-4"><%= link_to @post.title%></h1>
      <!-- Author -->
      <p class="lead"></p>
      <hr>
       <!-- Date/Time -->
      <b>Posted on <%= @post.published_at.strftime("%d %B %Y") %><br></b>
      <hr>
      <%= image_tag(@post.banner_image, :alt => "Picture", class: "img-fluid rounded", :size => "700x400") %>
      <br>
      <hr>
      <!-- Post Content -->
        <p class="lead"><%= @post.description.html_safe %></p>
        

        <!-- Single Comment -->
          <div class="media mt-4">
            <h5 class="mt-0">Comments:</h5>
              <% @post.comments.each do |post_cmnt| %>
              <h5 class="mt-0"><%= post_cmnt.name %></h5>
                 <%= post_cmnt.message %>
                <% end %>
            </div>
          </div>
          <div class="card my-4">
          <div class="card-body">
            <%= render 'comments/form' %>
          </div>
        </div>
        </div>
      </div>

